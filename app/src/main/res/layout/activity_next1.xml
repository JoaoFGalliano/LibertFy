<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Next1">

    <LinearLayout
        style="@style/layout_vertical"
        tools:ignore="MissingConstraints">

        <TextView
            style="@style/fonte_padrao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/nxt_1">

        </TextView>

        <LinearLayout style="@style/layout_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:src="@drawable/encontre">

            </ImageView>
        </LinearLayout>

        <Button
            android:id="@+id/bt_avancar2"
            style="@style/btn"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/poppins_reg"
            android:text="@string/btn_next"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>