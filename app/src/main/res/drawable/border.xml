<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cor de fundo do layout -->
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red_2" /> <!-- Cor transparente para o interior -->
            <stroke
                android:width="2dp"
                android:color="#070707" /> <!-- Cor da borda -->
        </shape>
    </item>
</layer-list>
